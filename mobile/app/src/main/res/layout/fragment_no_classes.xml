<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".NoClassesFragment" android:id="@+id/startLayout">
    <TextView
            android:text="Oh no! I don't see any classes."
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/noClasses"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="30sp" android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/noClassesSub"
            app:layout_constraintVertical_chainStyle="packed"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:text="This means that you probably can't reach the chain. Make sure you are connected."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/noClassesSub" android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noClasses" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp" android:layout_marginTop="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>