<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".StartFragment" android:id="@+id/startLayout">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/title"
            android:text="Welcome to AttendIt!" android:textSize="36sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintVertical_chainStyle="packed"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="35dp"/>
    <Button
            android:text="Professor"
            android:layout_width="155dp"
            android:layout_height="84dp"
            android:id="@+id/professorButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/studentButton" android:layout_marginTop="128dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="128dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="128dp"/>
    <Button
            android:text="Student"
            android:layout_width="155dp"
            android:layout_height="82dp"
            android:id="@+id/studentButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/professorButton"
            android:layout_marginTop="64dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="128dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="128dp"/>
    <TextView
            android:text="Select a role below to get started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintBottom_toTopOf="@+id/professorButton" android:layout_marginTop="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="75dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="75dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>