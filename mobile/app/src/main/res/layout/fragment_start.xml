<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".StartFragment" android:id="@+id/layout">
    <Button
            android:text="Professor"
            android:layout_width="216dp"
            android:layout_height="84dp"
            android:id="@+id/professorButton"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/studentButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
    />
    <Button
            android:text="Student"
            android:layout_width="213dp"
            android:layout_height="82dp"
            android:id="@+id/studentButton"
            app:layout_constraintStart_toStartOf="@+id/professorButton"
            app:layout_constraintEnd_toEndOf="@+id/professorButton" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/professorButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>