<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".AdvertiseMode">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to advertise mode." app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            android:id="@+id/advertiseModePrompt"/>
    <TextView
            android:text="Selected CRN:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/advertiseModeSelectedCRN"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/advertiseCRNSpinner"
            app:layout_constraintStart_toStartOf="@+id/advertiseCRNSpinner"
            app:layout_constraintEnd_toEndOf="@+id/advertiseCRNSpinner"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/advertiseCRNSpinner"
            app:layout_constraintTop_toBottomOf="@+id/advertiseModePrompt" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/advertiseModePrompt"
            app:layout_constraintEnd_toEndOf="@+id/advertiseModePrompt"/>
    <Button
            android:text="Start Advertising"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/advertiseModeSelectedCRN"
            app:layout_constraintStart_toStartOf="@+id/advertiseModeSelectedCRN"
            app:layout_constraintEnd_toEndOf="@+id/advertiseModeSelectedCRN"/>

</androidx.constraintlayout.widget.ConstraintLayout>