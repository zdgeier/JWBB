<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:background="@drawable/searching_bg"
                                                   tools:context=".ProfessorSearch" android:id="@+id/constraintLayout">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ProfessorSearching_Prompt"
            android:text="@string/professor_searching" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="64dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="center" android:textSize="18sp" android:textColor="#2699fb"/>
    <Button
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ProfessorSearchingButton"
            android:background="@color/major_light_blue_bg"
            android:textColor="@color/colorPrimary" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ProfessorSearching_Prompt" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>